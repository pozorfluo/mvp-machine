{
    "compilerOptions": {
        "target": "es2017",
        "strict": true,
        "alwaysStrict": true,
        "strictNullChecks" : true,
        "strictPropertyInitialization": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "module": "CommonJS",
        "types": ["node", "jest"],
        "outDir": "dist",
        "removeComments": true,
        "declaration": true
    },
    "files": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}